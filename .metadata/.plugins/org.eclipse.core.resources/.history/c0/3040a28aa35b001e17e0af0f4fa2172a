package com.cts.account.service;

import org.springframework.beans.factory.annotation.Autowired;
import org.springframework.stereotype.Service;

import com.cts.account.model.Account;
import com.cts.account.model.CreateAccountResponse;
import com.cts.account.repository.AccountRepository;


@Service
public class AccountServiceImpl implements AccountService{
	
	@Autowired
	private AccountRepository accountRepository;

	@Override
	public CreateAccountResponse createAccount(Account account) {
		
		 try {
	        	Account createdAccount = accountRepository.save(account);
	        	Long customerId = createdAccount.getAccountNo(); 

	            String message = "Customer created successfully";
	            return new CreateAccountResponse(customerId, message);
	        } catch (Exception e) {
	           
	            return new CreateAccountResponse(null, "Error creating customer");
	        }
		
	}

}
