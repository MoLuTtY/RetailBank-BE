package com.cts.customer.feignClient;

import org.springframework.cloud.openfeign.FeignClient;
import org.springframework.web.bind.annotation.GetMapping;
import org.springframework.web.bind.annotation.PathVariable;
import com.cts.account.model.Account;


@FeignClient(name = "account-service", url = "http://localhost:8090") 

public interface AccountFeignClient {

    @GetMapping("/api/accounts/find-savings-accounts")
    Account getCustomerSavingsAccount(@PathVariable("customerId") Long customerId);
}
